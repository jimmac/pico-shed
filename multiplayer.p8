function make_player(x,y,c,id)
	x=x or 0
	y=y or 0
	c=c or 12
	id=id or 0
	
	return {
	 x=x,
	 y=y,
	 c=c, --color
	 id=id,
	 
	 update=function(self)
	  if btn(0,self.id) then
		  self.x-=1
		 end
		 if btn(1,self.id) then
		  self.x+=1
		 end
	 end,
	 
	 draw=function(self)
	 	print(
	 		"üòê",
	 		self.x,
	 		self.y,
	 		self.c	 		
	 	)
	 end
	}
end

