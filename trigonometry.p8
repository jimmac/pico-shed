pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
function _init()
	t=0
	dot={}
	dot.x=0
	dot.y=0
	ang=.5
	dist=40
end

function _update()
	t+=1
	
	if btn(⬅️) then
		ang-=.01
	elseif btn(➡️) then
		ang+=.01
	end
	
	if btn(⬆️) then
		dist+=1
	elseif btn(⬇️) then
		dist-=1
	end
	dot.x=sin(ang)*dist+60
	dot.y=cos(ang)*dist+60
end

function _draw()
	cls()
	circ(64,64,40,1)
	spr(1,dot.x,dot.y)
	print(t,2,90,7)
	print("x: "..dot.x)
	print("y: "..dot.y)
	print("dist: "..dist)
	print("ang: "..ang)
end
